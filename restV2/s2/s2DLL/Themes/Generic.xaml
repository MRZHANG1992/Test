<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Com.Aote.Reports">


    <Style TargetType="local:Table">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:Table">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid x:Name="PART_RootPanel" Background="White">
                            <Canvas x:Name="PART_LineLayout"></Canvas>
                            <Canvas x:Name="PART_CellLayout">
                            </Canvas>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
